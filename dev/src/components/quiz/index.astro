---
// Import quiz data from JSON file
import quizDataRaw from './quizdata.json';
import type { QuizData } from './types';
import { FinalQuiz } from './Quiz';
import PageHeader from '../common/page-header/index.astro';

const quizData = quizDataRaw as QuizData;
---

<PageHeader
  title="Find Your Perfect Smartboard"
  subtitle="Answer a few questions and we'll recommend the best display solution for your needs"
/>

<section class="section">
  <div class="container">
    <div class="quiz-client-wrapper">
      <FinalQuiz client:load quizData={quizData} />
    </div>
  </div>
</section>
