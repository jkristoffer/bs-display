---
import MainLayout from '../../layouts/MainLayout.astro';
import PageHeader from '../../components/common/page-header/index.astro';
import { getCollection } from 'astro:content';

const useCases = await getCollection('useCases');
---

<MainLayout 
  title="Use Cases | BS Display"
  description="Explore how our display solutions have helped businesses across industries create engaging experiences and achieve measurable results."
>
  <!-- Use Cases Background Elements -->
  <div class="use-cases-bg-elements">
    <div class="bg-pattern"></div>
    <div class="bg-glow bg-glow-1"></div>
    <div class="bg-glow bg-glow-2"></div>
    <div class="bg-glow bg-glow-3"></div>
  </div>

  <!-- Modern Hero Section -->
  <section class="use-cases-hero">
    <div class="hero-container">
      <div class="hero-content animate-fade-up">
        <div class="hero-badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Success Stories
        </div>
        <h1 class="hero-title">Use Cases</h1>
        <p class="hero-subtitle">
          See how our display solutions drive real-world results across industries. 
          From education to corporate environments, discover proven strategies and measurable outcomes.
        </p>
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">500+</div>
            <div class="stat-label">Successful Implementations</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">12</div>
            <div class="stat-label">Industries Served</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">95%</div>
            <div class="stat-label">Customer Satisfaction</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Grid Section -->
  <section class="use-cases-section">
    <div class="use-cases-container">
      <div class="section-header animate-fade-up">
        <h2>Real-World Applications</h2>
        <p>Explore detailed case studies showcasing how our interactive displays transform spaces and enhance experiences.</p>
      </div>
      
      <div class="use-case-grid">
        {useCases.map((useCase, index) => (
          <a href={`/use-cases/${useCase.id}`} class="use-case-card glass-light animate-fade-up" style={`animation-delay: ${index * 0.1}s`}>
            {useCase.data.featuredImage && (
              <div class="card-image-container">
                <img src={useCase.data.featuredImage} alt={useCase.data.title} class="card-image" />
                <div class="image-overlay"></div>
              </div>
            )}
            <div class="card-content">
              <div class="card-header">
                <div class="industry-tag">{useCase.data.industry}</div>
                <div class="card-icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                    <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              </div>
              <h3 class="card-title">{useCase.data.title}</h3>
              <p class="card-description">{useCase.data.description}</p>
              <div class="card-footer">
                <span class="read-more">
                  Read Case Study
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                    <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M12 5L19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <style lang="scss">
    /* Use Cases Background Elements */
    .use-cases-bg-elements {
      position: fixed;
      inset: 0;
      z-index: -1;
      pointer-events: none;
      overflow: hidden;
    }

    .bg-pattern {
      position: absolute;
      inset: 0;
      background-image: 
        radial-gradient(circle at 25% 75%, rgba(16, 185, 129, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 75% 25%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(139, 92, 246, 0.02) 0%, transparent 50%);
    }

    .bg-glow {
      position: absolute;
      border-radius: 50%;
      filter: blur(120px);
      opacity: 0.06;
    }

    .bg-glow-1 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, #10b981 0%, transparent 70%);
      top: -250px;
      right: -250px;
      animation: glow1Float 35s ease-in-out infinite;
    }

    .bg-glow-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, #3b82f6 0%, transparent 70%);
      bottom: -200px;
      left: -200px;
      animation: glow2Float 30s ease-in-out infinite reverse;
    }

    .bg-glow-3 {
      width: 350px;
      height: 350px;
      background: radial-gradient(circle, #8b5cf6 0%, transparent 70%);
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      animation: glow3Float 40s ease-in-out infinite;
    }

    /* Modern Hero Section */
    .use-cases-hero {
      padding: var(--space-section) 0;
      background: linear-gradient(135deg, rgba(16, 185, 129, 0.05) 0%, rgba(59, 130, 246, 0.05) 100%);
      position: relative;
      overflow: hidden;
      min-height: 70vh;
      display: flex;
      align-items: center;
    }

    .hero-container {
      max-width: var(--container-default);
      margin: 0 auto;
      padding: 0 var(--space-md);
      position: relative;
      z-index: 2;
    }

    .hero-content {
      text-align: center;
      max-width: 900px;
      margin: 0 auto;
    }

    .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: var(--space-sm);
      padding: var(--space-sm) var(--space-lg);
      background: var(--gradient-success);
      color: white;
      border-radius: var(--radius-full);
      font-size: var(--text-body);
      font-weight: var(--font-weight-semibold);
      margin-bottom: var(--space-lg);
      box-shadow: var(--shadow-lg);
      
      svg {
        width: 24px;
        height: 24px;
      }
    }

    .hero-title {
      font-size: var(--text-hero);
      font-weight: var(--font-weight-bold);
      line-height: var(--text-hero-line-height);
      color: var(--color-text-primary);
      margin: 0 0 var(--space-lg) 0;
      background: var(--gradient-success);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-subtitle {
      font-size: var(--text-subsection);
      line-height: var(--text-body-line-height);
      color: var(--color-text-secondary);
      max-width: 700px;
      margin: 0 auto var(--space-xl) auto;
    }

    .hero-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-lg);
      max-width: 800px;
      margin: 0 auto;

      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        gap: var(--space-md);
      }
    }

    .stat-item {
      text-align: center;
      padding: var(--space-lg);
      background: var(--glass-bg);
      backdrop-filter: var(--glass-backdrop);
      border: 1px solid var(--glass-border);
      border-radius: var(--radius-card);
      box-shadow: var(--shadow-md);
    }

    .stat-number {
      font-size: var(--text-section);
      font-weight: var(--font-weight-bold);
      color: var(--color-text-primary);
      background: var(--gradient-success);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: var(--space-xs);
    }

    .stat-label {
      font-size: var(--text-body);
      color: var(--color-text-secondary);
      font-weight: var(--font-weight-medium);
    }

    /* Use Cases Section */
    .use-cases-section {
      padding: var(--space-section) 0;
      position: relative;
      background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 0.98) 100%);
      backdrop-filter: blur(10px);
    }

    .use-cases-container {
      max-width: var(--container-default);
      margin: 0 auto;
      padding: 0 var(--space-md);
    }

    .section-header {
      text-align: center;
      margin-bottom: var(--space-section);

      h2 {
        font-size: var(--text-section);
        font-weight: var(--font-weight-bold);
        color: var(--color-text-primary);
        margin: 0 0 var(--space-md) 0;
      }

      p {
        font-size: var(--text-subsection);
        line-height: var(--text-body-line-height);
        color: var(--color-text-secondary);
        max-width: 600px;
        margin: 0 auto;
      }
    }

    /* Use Case Cards */
    .use-case-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: var(--space-xl);

      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        gap: var(--space-lg);
      }
    }

    .use-case-card {
      display: block;
      text-decoration: none;
      color: inherit;
      background: var(--glass-bg);
      backdrop-filter: var(--glass-backdrop);
      border: 1px solid var(--glass-border);
      border-radius: var(--radius-card-lg);
      overflow: hidden;
      box-shadow: var(--shadow-lg);
      transition: all var(--duration-normal) var(--ease-bounce);
      position: relative;

      &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--gradient-success);
        opacity: 0;
        transition: opacity var(--duration-normal) var(--ease-smooth);
      }

      &:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: var(--shadow-2xl);
        border-color: rgba(16, 185, 129, 0.3);

        &::before {
          opacity: 1;
        }

        .card-image {
          transform: scale(1.05);
        }

        .image-overlay {
          opacity: 0.3;
        }

        .read-more {
          color: var(--color-success);
          transform: translateX(4px);
        }
      }
    }

    .card-image-container {
      position: relative;
      height: 240px;
      overflow: hidden;
    }

    .card-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform var(--duration-normal) var(--ease-smooth);
    }

    .image-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        135deg,
        rgba(16, 185, 129, 0.1) 0%, 
        rgba(59, 130, 246, 0.1) 100%
      );
      opacity: 0;
      transition: opacity var(--duration-normal) var(--ease-smooth);
    }

    .card-content {
      padding: var(--space-card);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-md);
    }

    .industry-tag {
      display: inline-flex;
      align-items: center;
      padding: var(--space-xs) var(--space-sm);
      background: var(--gradient-success);
      color: white;
      border-radius: var(--radius-full);
      font-size: var(--text-caption);
      font-weight: var(--font-weight-semibold);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .card-icon {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: rgba(16, 185, 129, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-success);
    }

    .card-title {
      font-size: var(--text-subsection);
      font-weight: var(--font-weight-bold);
      color: var(--color-text-primary);
      margin: 0 0 var(--space-sm) 0;
      line-height: 1.4;
    }

    .card-description {
      font-size: var(--text-body);
      line-height: var(--text-body-line-height);
      color: var(--color-text-secondary);
      margin: 0 0 var(--space-lg) 0;
    }

    .card-footer {
      border-top: 1px solid var(--glass-border);
      padding-top: var(--space-md);
    }

    .read-more {
      display: inline-flex;
      align-items: center;
      gap: var(--space-xs);
      font-size: var(--text-body);
      font-weight: var(--font-weight-semibold);
      color: var(--color-text-primary);
      transition: all var(--duration-normal) var(--ease-smooth);

      svg {
        width: 16px;
        height: 16px;
      }
    }

    /* Animations */
    @keyframes glow1Float {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      33% { transform: translate(-30px, -25px) rotate(120deg); }
      66% { transform: translate(25px, -30px) rotate(240deg); }
    }

    @keyframes glow2Float {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      33% { transform: translate(35px, -20px) rotate(-120deg); }
      66% { transform: translate(-20px, -35px) rotate(-240deg); }
    }

    @keyframes glow3Float {
      0%, 100% { transform: translate(-50%, -50%) rotate(0deg) scale(1); }
      25% { transform: translate(-50%, -50%) rotate(90deg) scale(1.1); }
      50% { transform: translate(-50%, -50%) rotate(180deg) scale(0.9); }
      75% { transform: translate(-50%, -50%) rotate(270deg) scale(1.05); }
    }

    /* Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
      .bg-glow-1, .bg-glow-2, .bg-glow-3 {
        animation: none !important;
      }
      
      .use-cases-hero, .use-cases-section {
        backdrop-filter: none;
      }
      
      * {
        transition: none !important;
      }
    }
  </style>
</MainLayout>
