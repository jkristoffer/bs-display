---
import MainLayout from '../layouts/MainLayout.astro';
import Banner from '../components/home/Banner/Banner.astro';
import BrandsSection from '../components/home/BrandsSection/BrandsSection.astro';
import BuyingGuideSection from '../components/home/BuyingGuideSection/BuyingGuideSection.astro';
import UsecasesSection from '../components/home/UsecasesSection/UsecasesSection.astro';
import BlogHighlights from '../components/home/BlogHighlights/BlogHighlights.astro';
import QuizPromotion from '../components/home/QuizPromotion/QuizPromotion.astro';
import CategoryNavigation from '../components/home/CategoryNavigation/CategoryNavigation.astro';
import Button from '../components/common/Button/Button.astro';
import DataTable from '../components/home/DataTable/DataTable.astro';

// SEO Configuration for Homepage
const seoProps = {
  title: 'Big Shine Display | Interactive Smart Boards & Accessories',
  description:
    'Premium interactive smart boards and accessories for classrooms, offices, and training centers in Singapore and Malaysia.',
  ogTitle: 'Smart Display Solutions for Education & Business | Big Shine',
  ogDescription:
    'Transform your classroom or meeting room with our interactive smart boards. Touch-enabled displays with multi-user collaboration features.',
  ogImage: '/assets/images/homepage-social-share.jpg', // Please ensure this image exists at this path or update it.
  ogType: 'website',
  twitterCard: 'summary_large_image',
  twitterTitle: 'Big Shine Display | Interactive Smart Boards & Accessories',
  twitterDescription:
    'Premium interactive smart boards for classrooms, offices, and training centers in SG & MY. Visual collaboration tools.',
  canonicalUrl: new URL('/', Astro.site).href,
  noindex: false,
  nofollow: false,
  additionalTags: [
    { name: 'author', content: 'Big Shine Display' },
    {
      name: 'keywords',
      content:
        'interactive smart board, smart display, digital whiteboard, classroom technology, office collaboration, Singapore, Malaysia, touch screen display'
    },
    { property: 'og:locale', content: 'en_SG' }
  ]
};
---

<MainLayout {...seoProps}>
  <Banner
    title="BIG SHINE DISPLAY"
    subtitle="Premium Interactive Smart Boards for Education and Business"
  />

  <section class="section">
    <div class="container">
      <QuizPromotion />
    </div>
  </section>

  <section class="section">
    <div class="container">
      <CategoryNavigation />
    </div>
  </section>

  <section class="section section--with-background section--usecase">
    <div class="container">
      <UsecasesSection />
    </div>
  </section>

  <section class="section section--with-background section--buying-guide">
    <div class="container">
      <BuyingGuideSection />
    </div>
  </section>

  <section class="section section--wide section--flexible-payment">
    <div class="container">
      <div class="flexible-payment-promo">
        <h2>Flexible Payment Options Available</h2>
        <p>
          Make your smart display investment more affordable with our flexible payment plans. 
          Choose from installment options, bank loans, or buy-now-pay-later solutions to fit your budget.
        </p>
        <div class="payment-highlights">
          <div class="payment-option">
            <strong>Installment Plans</strong>
            <span>Up to 12 months, 0% interest available</span>
          </div>
          <div class="payment-option">
            <strong>Bank Loans</strong>
            <span>Up to 36 months with competitive rates</span>
          </div>
          <div class="payment-option">
            <strong>Buy Now, Pay Later</strong>
            <span>Split payments, instant approval</span>
          </div>
        </div>
        <Button
          variant="primary"
          size="lg"
          href="/flexible-payment"
          id="flexible-payment-cta">Learn More About Payment Options</Button>
      </div>
    </div>
  </section>

  <DataTable limit={50} />

  <section class="section">
    <div class="container">
      <BlogHighlights />
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="cta-banner">
        <h3>Find Your Perfect Smart Display Solution</h3>
        <p>
          Let our experts help you choose the right technology for your specific
          needs
        </p>
        <div class="cta-buttons">
          <Button
            variant="primary"
            size="lg"
            href="/contact"
            id="homepage-primary-cta">Request Expert Advice</Button
          >
          <Button variant="ghost" href="/demo" id="homepage-secondary-cta"
            >See It In Action</Button
          >
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style lang="scss">
  /* Section-specific styles */
  .section--buying-guide {
    background-color: #f6f9fc;
    background-image: linear-gradient(
        135deg,
        rgba(0, 0, 0, 0.15) 0%,
        rgba(11, 43, 85, 0.75) 100%
      ),
      url(/assets/conference_room_interactive_display_16x9.jpeg);
    background-size: cover;
    background-position: center;
  }

  .section--usecase {
    background-color: #fff;
  }

  /* Testimonial component styles */
  .testimonial {
    background-color: var(--color-surface);
    padding: var(--spacing-lg);
    border-radius: 8px;
    margin: var(--spacing-xl) 0;
    box-shadow: var(--box-shadow-1);
  }

  .testimonial-content {
    font-style: italic;
    max-width: 800px;
    margin: 0 auto;
  }

  .testimonial p {
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
    color: var(--color-text-primary);
    position: relative;
    padding-left: 20px;
  }

  .testimonial p::before {
    content: '"';
    font-size: 40px;
    color: var(--color-accent-primary);
    opacity: 0.3;
    position: absolute;
    left: 0;
    top: -10px;
  }

  /* CTA Banner styles */
  .cta-banner {
    background: #f0f8ff;
    padding: var(--spacing-xl);
    text-align: center;
    border-radius: 8px;
    box-shadow: var(--box-shadow-1);
  }

  .cta-banner h3 {
    margin-top: 0;
    color: var(--color-text-primary);
    font-size: var(--font-size-h3);
  }

  .cta-banner p {
    margin-bottom: var(--spacing-lg);
    font-size: var(--font-size-body-large);
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  /* Flexible Payment Section styles */
  .section--flexible-payment {
    background: linear-gradient(135deg, #f8fafb 0%, #e8f5e8 100%);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .flexible-payment-promo {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .flexible-payment-promo h2 {
    color: var(--color-text-primary);
    font-size: var(--font-size-h2);
    margin-bottom: var(--spacing-lg);
    font-weight: 600;
  }

  .flexible-payment-promo > p {
    font-size: var(--font-size-body-large);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xl);
    line-height: 1.6;
  }

  .payment-highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .payment-option {
    background: rgba(255, 255, 255, 0.8);
    padding: var(--spacing-lg);
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .payment-option strong {
    color: var(--color-accent-primary);
    font-size: var(--font-size-body-regular);
    font-weight: 600;
  }

  .payment-option span {
    color: var(--color-text-primary);
    font-size: var(--font-size-small);
    opacity: 0.8;
  }

  @media (max-width: $breakpoint-md) {
    .payment-highlights {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
    
    .flexible-payment-promo h2 {
      font-size: var(--font-size-h3);
    }
  }
</style>
