---
import NavItem from './NavItem.astro';

interface Props {
  currentPath?: string;
}

const currentPath = Astro.url.pathname;

const navItems = [
  { path: '/', label: 'Home' },
  {
    label: 'Products',
    dropdown: true,
    items: [
      { path: '/products', label: 'Smart Boards' }
      // { path: '/products/lecterns', label: 'Lecterns' }
    ]
  },
  // {
  //   label: 'Solutions',
  //   dropdown: true,
  //   items: [
  //     { path: '/solutions/classrooms', label: 'For Classrooms' },
  //     { path: '/solutions/offices', label: 'For Offices & Boardrooms' },
  //     { path: '/solutions/training', label: 'For Training Centers' }
  //   ]
  // },
  {
    label: 'Learn',
    dropdown: true,
    items: [
      {
        path: '/smart-whiteboard-buying-guide',
        label: 'Smart Whiteboard Buying Guide'
      },
      { path: '/learn/blog', label: 'Blog' },
      { path: '/learn/comparison', label: 'Comparison Table' }
    ]
  },
  { path: '/contact', label: 'Contact' }
];
---

<nav class="nav">
  <div class="nav__container">
    <div class="nav__logo">
      <a href="/" class="nav__logo-link">
        <img
          src="/assets/logo3.png"
          alt="Big Shine Display Logo"
          class="nav__logo-image"
        />
      </a>
    </div>
    <div class="nav__items">
      {
        navItems.map((item) =>
          item.dropdown ? (
            <div class="nav__dropdown">
              <div class="nav__dropdown-trigger">
                {item.label} <span class="nav__dropdown-arrow">â–¾</span>
              </div>
              <div class="nav__dropdown-menu">
                {item.items.map((subItem) => (
                  <NavItem
                    href={subItem.path}
                    active={currentPath === subItem.path}
                  >
                    {subItem.label}
                  </NavItem>
                ))}
              </div>
            </div>
          ) : (
            <NavItem href={item.path} active={currentPath === item.path}>
              {item.label}
            </NavItem>
          )
        )
      }
    </div>
    <button
      id="mobile-menu-toggle"
      class="nav__mobile-toggle"
      aria-label="Toggle menu"
    >
      <span class="nav__mobile-toggle-bar"></span>
      <span class="nav__mobile-toggle-bar"></span>
      <span class="nav__mobile-toggle-bar"></span>
    </button>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-toggle');
  btn.addEventListener('click', () => {
    btn.classList.toggle('nav__mobile-toggle--active');
    document
      .querySelector('.nav__items')
      .classList.toggle('nav__items--active');
  });

  // Mobile dropdown functionality
  if (window.innerWidth <= 768) {
    // Assuming $breakpoint-md is 768px
    const dropdownTriggers = document.querySelectorAll(
      '.nav__dropdown-trigger'
    );

    dropdownTriggers.forEach((trigger) => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        const container = trigger.closest('.nav__dropdown');
        container.classList.toggle('nav__dropdown--active');
      });
    });
  }
</script>

<style lang="scss">
  .nav {
    width: 100%;
    background-color: var(--color-background);
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid rgba(var(--color-accent-primary-rgb), 0.1);
  }

  .nav__container {
    width: 100%;
    max-width: var(--spacing-container-max-width);
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) var(--spacing-lg);
    margin: 0 auto;
  }

  .nav__logo {
    width: 140px;
  }

  .nav__logo-image {
    width: 100%;
    transition: transform 0.3s ease;
  }

  .nav__logo-link:hover .nav__logo-image {
    transform: scale(1.05);
  }

  .nav__items {
    display: flex;
    gap: var(--spacing-xl);
    margin-left: auto;
    align-items: center;
  }

  .nav__dropdown {
    position: relative;
    cursor: pointer;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .nav__dropdown-trigger {
    font-size: var(--font-size-body-regular);
    text-transform: uppercase;
    font-weight: var(--font-weight-regular);
    letter-spacing: -0.5px;
    padding: var(--spacing-sm) var(--spacing-md);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    transition: all 0.3s ease;
    border-radius: 4px;
    position: relative;
  }

  .nav__dropdown-trigger:hover {
    color: var(--color-accent-primary);
    background-color: rgba(var(--color-accent-primary-rgb), 0.05);
  }

  .nav__dropdown-arrow {
    font-size: 12px;
    margin-left: var(--spacing-xs);
    color: var(--color-accent-primary);
    transition: transform 0.2s ease;
  }

  .nav__dropdown:hover .nav__dropdown-arrow {
    transform: rotate(180deg);
  }

  .nav__dropdown-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--color-background);
    min-width: 240px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    padding: var(--spacing-sm) 0;
    display: none;
    z-index: 200;
    opacity: 0;
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    border: 1px solid rgba(var(--color-accent-primary-rgb), 0.1);
  }

  .nav__dropdown-menu::before {
    content: '';
    position: absolute;
    top: -6px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    background-color: var(--color-background);
    border-left: 1px solid rgba(var(--color-accent-primary-rgb), 0.1);
    border-top: 1px solid rgba(var(--color-accent-primary-rgb), 0.1);
  }

  /* Create a virtual padding area to prevent dropdown from collapsing */
  .nav__dropdown::after {
    content: '';
    position: absolute;
    height: 20px; /* Virtual padding height */
    width: 100%;
    bottom: -20px;
    left: 0;
    z-index: 150;
  }

  .nav__dropdown:hover .nav__dropdown-menu {
    display: block;
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }

  /* Add hover state for the dropdown menu itself */
  .nav__dropdown-menu:hover {
    display: block;
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }

  .nav__mobile-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-sm);
    border-radius: 4px;
  }

  .nav__mobile-toggle-bar {
    display: block;
    width: 25px;
    height: 2px;
    background-color: var(--color-text-primary);
    margin: 6px 0;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  @media (max-width: 768px) {
    .nav__container {
      padding: var(--spacing-sm) var(--spacing-md);
    }

    .nav__items {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      background-color: var(--color-background);
      flex-direction: column;
      padding: 0;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
      z-index: 100;
    }

    /* Show nav items when active */
    .nav__items--active {
      display: flex;
    }

    .nav__dropdown {
      width: 100%;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .nav__dropdown-trigger {
      padding: var(--spacing-md) var(--spacing-lg);
      justify-content: space-between;
      width: 100%;
      border-radius: 0;
    }

    .nav__dropdown-menu {
      position: static;
      display: none;
      box-shadow: none;
      padding: 0;
      border: none;
      border-radius: 0;
      min-width: 100%;
      transform: none;
      opacity: 1;
      background-color: rgba(var(--color-accent-primary-rgb), 0.03);
    }
    /* Show dropdown menu when parent container is active */
    .nav__dropdown--active .nav__dropdown-menu {
      display: block;
    }

    .nav__dropdown-menu::before {
      display: none;
    }

    .nav__mobile-toggle {
      display: block;
    }
    /* Style for active mobile menu toggle */
    .nav__mobile-toggle--active {
      .nav__mobile-toggle-bar:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
      }
      .nav__mobile-toggle-bar:nth-child(2) {
        opacity: 0;
      }
      .nav__mobile-toggle-bar:nth-child(3) {
        transform: rotate(-45deg) translate(7px, -6px);
      }
    }
  }
</style>
