---
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/index.scss';
import '../styles/sw-buying-guide.scss';

// Import components
import PageHeaderModern from '../components/common/PageHeaderModern.astro';
import {
  TableOfContents,
  WhatIsSection,
  WhyChooseSection,
  UseCasesSection,
  DisplayTechSection,
  TouchTechSection,
  TouchComparison,
  BrandsSection,
  FaqsSection,
  ExpertAdviceSection,
  RelatedPostsSection,
  StickyTableOfContents,
  BackToTopButton,
  MobileTableOfContents
} from '../components/sw-buying-guide';

// Define metadata for the page
const title = 'Smart Whiteboard Buying Guide | BS Display';
const description =
  'Everything you need to know before choosing the right interactive display for your needs - from display technologies to touch capabilities and recommended models.';

// Define table of contents items
const tocItems = [
  { href: '#what-is', text: 'What is a Smart Whiteboard?' },
  { href: '#why-choose', text: 'Why Choose Interactive Whiteboards?' },
  { href: '#use-cases', text: 'Use Case Scenarios' },
  { href: '#display-tech', text: 'Display Technologies Explained' },
  { href: '#touch-tech', text: 'Touch Technologies Breakdown' },
  { href: '#comparison', text: 'Interactive Display Comparison Chart' },
  { href: '#brands', text: 'Top Brands & Recommended Models' },
  { href: '#faqs', text: 'FAQs' },
  { href: '#expert-advice', text: 'Need Expert Advice?' }
];
---

<MainLayout title={title} description={description}>
  <div class="whiteboard-guide">
    <PageHeaderModern
      title="Smart Whiteboard Buying Guide"
      subtitle="Everything You Need to Know Before Choosing the Right Interactive Display"
      badge="Ultimate Guide"
      badgeIcon="ðŸ“š"
      theme="blue"
    />

    <TableOfContents items={tocItems} />

    <WhatIsSection />

    <WhyChooseSection />

    <UseCasesSection />

    <DisplayTechSection />

    <TouchTechSection />

    <TouchComparison client:load />


    <BrandsSection />

    <FaqsSection />

    <ExpertAdviceSection />

    <RelatedPostsSection />

    <StickyTableOfContents items={tocItems} client:load />
    <MobileTableOfContents items={tocItems} client:load />
    <BackToTopButton client:load />
  </div>
</MainLayout>
