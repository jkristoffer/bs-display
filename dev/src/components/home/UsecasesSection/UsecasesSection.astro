---
import UsecaseItem from './UsecaseItem.astro';
import Button from '../../common/Button/Button.astro';

// Import images
import img1 from './img/bsdisplay-iboard-usecase-classroom.jpeg';
import img2 from './img/bsdisplay-iboard-usecase-office.jpeg';
import img3 from './img/bsdisplay-iboard-usecase-training.jpeg';

const usecases = [
  {
    title: 'Classrooms',
    image: img1,
    points: [
      '<strong>➤ Touch-based learning</strong> helps students stay engaged during lessons.',
      '<strong>➤ Real-time whiteboarding</strong> lets teachers and students collaborate easily.',
      '<strong>➤ Screen mirroring</strong> from any device boosts participation and interactivity.'
    ],
    recommendedModels: 'METZ 75", Infinity Pro 86"'
  },
  {
    title: 'Offices & Boardrooms',
    image: img2,
    points: [
      '<strong>Video conferencing</strong> and <strong>hybrid meetings</strong> run smoothly with built-in support.',
      '<strong>Screen sharing</strong> and <strong>on-screen annotations</strong> improve collaboration.',
      '<strong>Zoom, Teams</strong>, and other apps integrate directly for convenience.'
    ],
    recommendedModels: 'SMART 65", METZ 75"'
  },
  {
    title: 'Training Centers',
    image: img3,
    points: [
      '<strong>Stylus-powered presentations</strong> make lessons more engaging and flexible.',
      '<strong>Screen recording</strong> lets learners review sessions anytime.',
      '<strong>Multi-user support</strong> allows group activities and simultaneous interactions.'
    ],
    recommendedModels: 'Infinity Pro 86", SMART 75"'
  }
];
---

<section class="usecases-section">
  <h2>Use Cases</h2>

  <div class="usecases-container">
    {
      usecases.map((usecase, index) => (
        <UsecaseItem
          title={usecase.title}
          image={usecase.image}
          points={usecase.points}
          recommendedModels={usecase.recommendedModels}
          isReversed={index % 2 !== 0}
        />
      ))
    }
  </div>

  <section class="testimonial">
    <div class="testimonial-content">
      <p>
        "Our classrooms have become more interactive and lively since installing
        smart boards. It's a game-changer for visual learners."<br />—
        Principal, Singapore Primary School
      </p>
      <p>
        "Meetings now move faster, and everyone can annotate on-screen in
        real-time—even remotely."<br />— IT Manager, Johor Tech Firm
      </p>
    </div>
  </section>

  <section class="cta-banner">
    <h3>Not Sure Which Use Case Fits You?</h3>
    <p>Tell us your goals — we'll recommend the right smart board.</p>
    <div class="cta-buttons">
      <Button variant="primary" href="#">Get Free Consultation</Button>
      <Button variant="ghost" href="#">Book a Quick Demo</Button>
    </div>
  </section>
</section>

<style>
  .usecases-section {
    background-color: #fff;
  }

  h2 {
    text-transform: uppercase;
    position: relative;
    font-size: var(--font-size-h2);
    z-index: 1;
    color: rgba(0, 0, 0, 0.7);
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  h2:before {
    content: '';
    display: block;
    width: 80px;
    height: 30px;
    margin: 0 auto;
    background-color: var(--color-accent-secondary);
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.61;
    z-index: -1;
  }

  .usecases-container {
    margin-bottom: var(--spacing-xl);
  }

  .testimonial {
    background-color: var(--color-surface);
    padding: var(--spacing-lg);
    border-radius: 8px;
    margin: var(--spacing-xl) 0;
    box-shadow: var(--box-shadow-1);
  }

  .testimonial-content {
    font-style: italic;
    max-width: 800px;
    margin: 0 auto;
  }

  .testimonial p {
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
    color: var(--color-text-primary);
    position: relative;
    padding-left: 20px;
  }

  .testimonial p::before {
    content: '"';
    font-size: 40px;
    color: var(--color-accent-primary);
    opacity: 0.3;
    position: absolute;
    left: 0;
    top: -10px;
  }

  .cta-banner {
    background: #f0f8ff;
    padding: var(--spacing-xl);
    text-align: center;
    margin-top: var(--spacing-xl);
    border-radius: 8px;
    box-shadow: var(--box-shadow-1);
  }

  .cta-banner h3 {
    margin-top: 0;
    color: var(--color-text-primary);
    font-size: var(--font-size-h3);
  }

  .cta-banner p {
    margin-bottom: var(--spacing-lg);
    font-size: var(--font-size-body-large);
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }
</style>
