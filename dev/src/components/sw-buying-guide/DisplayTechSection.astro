---
interface DisplayTech {
  type: string;
  imageQuality: string;
  powerUse: string;
  cost: string;
  idealFor: string;
}

interface Props {
  technologies: DisplayTech[];
  internalLinkText?: string;
  internalLinkUrl?: string;
}

const { 
  technologies = [
    {
      type: "LCD",
      imageQuality: "Medium",
      powerUse: "Medium",
      cost: "Low",
      idealFor: "General, classrooms"
    },
    {
      type: "LED",
      imageQuality: "High",
      powerUse: "Low",
      cost: "Medium",
      idealFor: "Offices, modern classrooms"
    },
    {
      type: "OLED",
      imageQuality: "Very High",
      powerUse: "Low",
      cost: "High",
      idealFor: "Creative industries, premium setups"
    },
    {
      type: "Projector",
      imageQuality: "Low",
      powerUse: "Low",
      cost: "Very Low",
      idealFor: "Budget, large scale settings"
    },
    {
      type: "E-Paper",
      imageQuality: "Low",
      powerUse: "Very Low",
      cost: "Low",
      idealFor: "Reading-focused applications"
    }
  ],
  internalLinkText = "OLED vs LCD Comparison â†’",
  internalLinkUrl = "#"
} = Astro.props;
---

<section id="display-tech" class="content-section bg-light">
  <div class="container">
    <h2>ðŸ“º Display Technologies Explained</h2>
    <div class="table-responsive">
      <table class="comparison-table">
        <thead>
          <tr>
            <th>Type</th>
            <th>Image Quality</th>
            <th>Power Use</th>
            <th>Cost</th>
            <th>Ideal For</th>
          </tr>
        </thead>
        <tbody>
          {technologies.map(tech => (
            <tr>
              <td><strong>{tech.type}</strong></td>
              <td>{tech.imageQuality}</td>
              <td>{tech.powerUse}</td>
              <td>{tech.cost}</td>
              <td>{tech.idealFor}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
    <div class="internal-link">
      <a href={internalLinkUrl} class="text-link">{internalLinkText}</a>
    </div>
  </div>
</section>
