<style>
  .footer {
    background-color: #f0f8ff;
    padding: 4rem 0 2rem;
    color: #333;
    border-top: 4px solid var(--color-accent-secondary);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 2rem;
  }

  .footer-logo {
    flex: 0 0 100%;
    margin-bottom: 2rem;
    text-align: center;
  }

  .logo-text {
    font-size: 1.8rem;
    font-weight: bold;
    color: rgba(0, 0, 0, 0.7);
    letter-spacing: -1px;
  }

  .tagline {
    font-size: 0.9rem;
    margin-top: 0.25rem;
    color: #555;
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    width: 100%;
  }

  .footer-section {
    flex: 1 1 200px;
  }

  .footer-section h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: #333;
    position: relative;
    padding-bottom: 0.5rem;
  }

  .footer-section h4::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 3px;
    background-color: var(--color-accent-secondary);
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: #555;
    text-decoration: none;
    transition: color 0.2s;
    font-size: 0.95rem;
  }

  .footer-section a:hover {
    color: var(--color-accent-primary);
  }

  .footer-bottom {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
  }

  .copyright {
    font-size: 0.85rem;
    color: #777;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: #555;
    font-size: 1.2rem;
    transition: color 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.05);
  }

  .social-links a:hover {
    color: #fff;
    background-color: var(--color-accent-primary);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
