---
import MainLayout from '../layouts/MainLayout.astro';
import Banner from '../components/home/Banner/Banner.astro';
import BrandsSection from '../components/home/BrandsSection/BrandsSection.astro';
import BuyingGuideSection from '../components/home/BuyingGuideSection/BuyingGuideSection.astro';
import UsecasesSection from '../components/home/UsecasesSection/UsecasesSection.astro';
import Button from '../components/common/Button/Button.astro';

// SEO Configuration for Homepage
const seoProps = {
  title: 'Big Shine Display | Interactive Smart Boards & Accessories',
  description: 'Premium interactive smart boards and accessories for classrooms, offices, and training centers in Singapore and Malaysia.',
  ogTitle: 'Smart Display Solutions for Education & Business | Big Shine',
  ogDescription: 'Transform your classroom or meeting room with our interactive smart boards. Touch-enabled displays with multi-user collaboration features.',
  ogImage: '/assets/images/homepage-social-share.jpg', // Please ensure this image exists at this path or update it.
  ogType: 'website',
  twitterCard: 'summary_large_image',
  twitterTitle: 'Big Shine Display | Interactive Smart Boards & Accessories',
  twitterDescription: 'Premium interactive smart boards for classrooms, offices, and training centers in SG & MY. Visual collaboration tools.',
  canonicalUrl: new URL('/', Astro.site).href,
  noindex: false,
  nofollow: false,
  additionalTags: [
    { name: 'author', content: 'Big Shine Display' },
    { name: 'keywords', content: 'interactive smart board, smart display, digital whiteboard, classroom technology, office collaboration, Singapore, Malaysia, touch screen display' },
    { property: 'og:locale', content: 'en_SG' }
  ]
};
---

<MainLayout {...seoProps}>
  <Banner
    title="BIG SHINE DISPLAY"
    subtitle="Premium Interactive Smart Boards for Education and Business"
  />

  <section class="container">
    <BrandsSection />
  </section>

  <section class="usecase-container">
    <div class="container">
      <UsecasesSection />
    </div>
  </section>

  <section class="buying-guide-container">
    <div class="container">
      <BuyingGuideSection />
    </div>
  </section>

  <div class="container">
    <section class="testimonial">
      <div class="testimonial-content">
        <p>
          "Our classrooms have become more interactive and lively since
          installing smart boards. It's a game-changer for visual learners."<br
          />— Principal, Singapore Primary School
        </p>
        <p>
          "Meetings now move faster, and everyone can annotate on-screen in
          real-time—even remotely."<br />— IT Manager, Johor Tech Firm
        </p>
      </div>
    </section>

    <section class="cta-banner">
      <h3>Not Sure Which Use Case Fits You?</h3>
      <p>Tell us your goals — we'll recommend the right smart board.</p>
      <div class="cta-buttons">
        <Button variant="primary" href="#">Get Free Consultation</Button>
        <Button variant="ghost" href="#">Book a Quick Demo</Button>
      </div>
    </section>
  </div>
</MainLayout>

<style lang="scss">
  .buying-guide-container {
    background-color: #f6f9fc;
    padding: 50px 0;
    margin-top: 30px;
    background-image: linear-gradient(
        135deg,
        rgba(0, 0, 0, 0.15) 0%,
        rgba(11, 43, 85, 0.75) 100%
      ),
      url(/assets/conference_room_interactive_display_16x9.jpeg);
    background-size: cover;
    background-position: center;
  }

  .usecase-container {
    background-color: #fff;
    padding: 50px 0;
    margin-top: 30px;
  }

  @media (max-width: $breakpoint-md) {
    .buying-guide-container,
    .usecase-container {
      padding: 30px 0;
    }
  }

  .testimonial {
    background-color: var(--color-surface);
    padding: var(--spacing-lg);
    border-radius: 8px;
    margin: var(--spacing-xl) 0;
    box-shadow: var(--box-shadow-1);
  }

  .testimonial-content {
    font-style: italic;
    max-width: 800px;
    margin: 0 auto;
  }

  .testimonial p {
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
    color: var(--color-text-primary);
    position: relative;
    padding-left: 20px;
  }

  .testimonial p::before {
    content: '"';
    font-size: 40px;
    color: var(--color-accent-primary);
    opacity: 0.3;
    position: absolute;
    left: 0;
    top: -10px;
  }

  .cta-banner {
    background: #f0f8ff;
    padding: var(--spacing-xl);
    text-align: center;
    margin-top: var(--spacing-xl);
    border-radius: 8px;
    box-shadow: var(--box-shadow-1);
  }

  .cta-banner h3 {
    margin-top: 0;
    color: var(--color-text-primary);
    font-size: var(--font-size-h3);
  }

  .cta-banner p {
    margin-bottom: var(--spacing-lg);
    font-size: var(--font-size-body-large);
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }
</style>
