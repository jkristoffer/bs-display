---
import MainLayout from '../../layouts/MainLayout.astro';
import PageHeaderModern from '../../components/common/PageHeaderModern.astro';
import { getCollection } from 'astro:content';

const useCases = await getCollection('useCases');
---

<MainLayout
  title="Use Cases | BS Display"
  description="Explore how our display solutions have helped businesses across industries create engaging experiences and achieve measurable results."
>
  <PageHeaderModern
    title="Use Cases"
    subtitle="See how our display solutions drive real-world results across industries."
    badge="ðŸŒŸ Success Stories"
    theme="green"
    stats={[
      { number: '500+', label: 'Successful Implementations' },
      { number: '12', label: 'Industries Served' },
      { number: '95%', label: 'Customer Satisfaction' }
    ]}
  />

  <!-- Use Cases Grid Section -->
  <section class="use-cases-section">
    <div class="use-cases-container">
      <div class="section-header animate-fade-up">
        <h2>Real-World Applications</h2>
        <p>
          Explore detailed case studies showcasing how our interactive displays
          transform spaces and enhance experiences.
        </p>
      </div>

      <div class="use-case-grid">
        {
          useCases.map((useCase, index) => (
            <a
              href={`/use-cases/${useCase.id}`}
              class="use-case-card glass-light animate-fade-up"
              style={`animation-delay: ${index * 0.1}s`}
            >
              {useCase.data.featuredImage && (
                <div class="card-image-container">
                  <img
                    src={useCase.data.featuredImage}
                    alt={useCase.data.title}
                    class="card-image"
                  />
                  <div class="image-overlay" />
                </div>
              )}
              <div class="card-content">
                <div class="card-header">
                  <div class="industry-tag">{useCase.data.industry}</div>
                  <div class="card-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                      <path
                        d="M13 2L3 14H12L11 22L21 10H12L13 2Z"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </svg>
                  </div>
                </div>
                <h3 class="card-title">{useCase.data.title}</h3>
                <p class="card-description">{useCase.data.description}</p>
                <div class="card-footer">
                  <span class="read-more">
                    Read Case Study
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                      <path
                        d="M5 12H19"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M12 5L19 12L12 19"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <style lang="scss">
    /* Use Cases Section */
    .use-cases-section {
      padding: var(--space-section) 0;
      position: relative;
      background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0.95) 0%,
        rgba(248, 250, 252, 0.98) 100%
      );
      backdrop-filter: blur(10px);
    }

    .use-cases-container {
      max-width: var(--container-default);
      margin: 0 auto;
      padding: 0 var(--space-md);
    }

    .section-header {
      text-align: center;
      margin-bottom: var(--space-section);

      h2 {
        font-size: var(--text-section);
        font-weight: var(--font-weight-bold);
        color: var(--color-text-primary);
        margin: 0 0 var(--space-md) 0;
      }

      p {
        font-size: var(--text-subsection);
        line-height: var(--text-body-line-height);
        color: var(--color-text-secondary);
        max-width: 600px;
        margin: 0 auto;
      }
    }

    /* Use Case Cards */
    .use-case-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: var(--space-xl);

      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        gap: var(--space-lg);
      }
    }

    .use-case-card {
      display: block;
      text-decoration: none;
      color: inherit;
      background: var(--glass-bg);
      backdrop-filter: var(--glass-backdrop);
      border: 1px solid var(--glass-border);
      border-radius: var(--radius-card-lg);
      overflow: hidden;
      box-shadow: var(--shadow-lg);
      transition: all var(--duration-normal) var(--ease-bounce);
      position: relative;

      &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--gradient-success);
        opacity: 0;
        transition: opacity var(--duration-normal) var(--ease-smooth);
      }

      &:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: var(--shadow-2xl);
        border-color: rgba(16, 185, 129, 0.3);

        &::before {
          opacity: 1;
        }

        .card-image {
          transform: scale(1.05);
        }

        .image-overlay {
          opacity: 0.3;
        }

        .read-more {
          color: var(--color-success);
          transform: translateX(4px);
        }
      }
    }

    .card-image-container {
      position: relative;
      height: 240px;
      overflow: hidden;
    }

    .card-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform var(--duration-normal) var(--ease-smooth);
    }

    .image-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        135deg,
        rgba(16, 185, 129, 0.1) 0%,
        rgba(59, 130, 246, 0.1) 100%
      );
      opacity: 0;
      transition: opacity var(--duration-normal) var(--ease-smooth);
    }

    .card-content {
      padding: var(--space-card);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-md);
    }

    .industry-tag {
      display: inline-flex;
      align-items: center;
      padding: var(--space-xs) var(--space-sm);
      background: var(--gradient-success);
      color: white;
      border-radius: var(--radius-full);
      font-size: var(--text-caption);
      font-weight: var(--font-weight-semibold);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .card-icon {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: rgba(16, 185, 129, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-success);
    }

    .card-title {
      font-size: var(--text-subsection);
      font-weight: var(--font-weight-bold);
      color: var(--color-text-primary);
      margin: 0 0 var(--space-sm) 0;
      line-height: 1.4;
    }

    .card-description {
      font-size: var(--text-body);
      line-height: var(--text-body-line-height);
      color: var(--color-text-secondary);
      margin: 0 0 var(--space-lg) 0;
    }

    .card-footer {
      border-top: 1px solid var(--glass-border);
      padding-top: var(--space-md);
    }

    .read-more {
      display: inline-flex;
      align-items: center;
      gap: var(--space-xs);
      font-size: var(--text-body);
      font-weight: var(--font-weight-semibold);
      color: var(--color-text-primary);
      transition: all var(--duration-normal) var(--ease-smooth);

      svg {
        width: 16px;
        height: 16px;
      }
    }

    /* Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
      * {
        transition: none !important;
      }
    }
  </style>
</MainLayout>
