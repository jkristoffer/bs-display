              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .quiz-promotion-sleek {
    position: relative;
    padding: var(--space-section) 0;
    background: linear-gradient(180deg, #ffffff 0%, #fafbfc 100%);
    overflow: hidden;
  }

  .quiz-promotion__container {
    max-width: var(--container-default);
    margin: 0 auto;
    padding: 0 var(--space-md);
    position: relative;
    z-index: 2;
  }

  /* Background Elements */
  .bg-elements {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
  }

  .bg-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(59, 130, 246, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(59, 130, 246, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    animation: gridMove 20s linear infinite;
  }

  .bg-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.1;
  }

  .bg-orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #3b82f6 0%, transparent 70%);
    top: -200px;
    right: -200px;
    animation: orbFloat1 15s ease-in-out infinite;
  }

  .bg-orb-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, #10b981 0%, transparent 70%);
    bottom: -150px;
    left: -150px;
    animation: orbFloat2 12s ease-in-out infinite reverse;
  }

  .bg-lines {
    position: absolute;
    top: 20%;
    right: 10%;
    width: 200px;
    height: 200px;
    background: url("data:image/svg+xml,%3Csvg width='200' height='200' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3Cpattern id='lines' patternUnits='userSpaceOnUse' width='40' height='40'%3E%3Cpath d='M0 40L40 0H20L0 20M40 40V20L20 40'/%3E%3C/pattern%3E%3C/defs%3E%3Crect width='200' height='200' fill='%23f3f4f6' fill-opacity='0.5'/%3E%3C/svg%3E") no-repeat;
    opacity: 0.3;
    animation: rotate 30s linear infinite;
  }

  /* Content Layout */
  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    align-items: center;
    min-height: 600px;
    
    @media (max-width: $breakpoint-lg) {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--space-lg);
    }
  }

  /* Left Content */
  .content-left {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    
    @media (max-width: $breakpoint-lg) {
      align-items: center;
    }
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--glass-bg);
    backdrop-filter: var(--glass-backdrop);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-full);
    color: #3b82f6;
    font-size: var(--text-body);
    font-weight: var(--font-weight-semibold);
    width: fit-content;
  }

  .badge-icon {
    font-size: 16px;
  }

  .section-title {
    font-size: var(--text-hero);
    font-weight: var(--font-weight-bold);
    line-height: var(--text-hero-line-height);
    color: var(--color-text-primary);
    margin: 0;
  }

  .title-highlight {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    
    &::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--gradient-primary);
      border-radius: var(--radius-sm);
      opacity: 0.3;
    }
  }

  .section-description {
    font-size: var(--text-body);
    line-height: var(--text-body-line-height);
    color: var(--color-text-secondary);
    margin: 0;
    max-width: 500px;
  }

  /* Stats Row */
  .stats-row {
    display: flex;
    gap: var(--space-lg);
    
    @media (max-width: $breakpoint-sm) {
      flex-direction: column;
      gap: var(--space-md);
    }
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: var(--text-section);
    font-weight: var(--font-weight-bold);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--space-xs);
  }

  .stat-label {
    font-size: var(--text-body);
    color: var(--color-text-secondary);
    font-weight: var(--font-weight-medium);
  }

  /* CTA Section */
  .cta-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .cta-section :global(button),
  .cta-section :global(a) {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    width: fit-content;
  }

  .features-preview {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .feature-chip {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.2);
    border-radius: var(--radius-full);
    font-size: var(--text-body);
    font-weight: var(--font-weight-medium);
    color: #10b981;
    
    svg {
      width: 14px;
      height: 14px;
    }
  }

  /* Right Visual */
  .content-right {
    position: relative;
    height: 500px;
    
    @media (max-width: $breakpoint-lg) {
      height: 400px;
      margin-top: var(--space-xl);
    }
  }

  .device-mockup {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Phone Container */
  .phone-container {
    position: relative;
    width: 280px;
    height: 500px;
    background: linear-gradient(145deg, #f8fafc 0%, #e2e8f0 100%);
    border-radius: var(--radius-xl);
    padding: var(--space-sm);
    box-shadow: var(--shadow-2xl);
    z-index: 2;
  }

  .phone-screen {
    width: 100%;
    height: 100%;
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--space-card);
    box-shadow: var(--shadow-inner);
    display: flex;
    flex-direction: column;
    gap: var(--space-card);
  }

  .screen-header {
    text-align: center;
  }

  .progress-bar {
    width: 100%;
    height: 6px;
    background: rgba(59, 130, 246, 0.1);
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 8px;
  }

  .progress-fill {
    width: 50%;
    height: 100%;
    background: linear-gradient(90deg, #3b82f6 0%, #8b5cf6 100%);
    border-radius: 3px;
    animation: progressFill 3s ease-in-out infinite;
  }

  .progress-text {
    font-size: 12px;
    color: #64748b;
    font-weight: 500;
  }

  .question-content h3 {
    font-size: 18px;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 16px 0;
    text-align: center;
  }

  .option-cards {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .option-card {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm);
    border: 2px solid var(--color-border-muted);
    border-radius: var(--radius-xl);
    cursor: pointer;
    transition: all var(--duration-normal) var(--ease-smooth);
    font-size: var(--text-body);
    font-weight: var(--font-weight-medium);
    
    &.active {
      border-color: #3b82f6;
      background: rgba(59, 130, 246, 0.05);
      color: #3b82f6;
    }
    
    &:hover:not(.active) {
      border-color: var(--color-border-muted);
      background: var(--color-surface-muted);
    }
  }

  .option-icon {
    font-size: 20px;
  }

  /* Floating Elements */
  .floating-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .floating-card {
    position: absolute;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md);
    background: var(--glass-bg);
    backdrop-filter: var(--glass-backdrop);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
    min-width: 200px;
  }

  .card-1 {
    top: 10%;
    left: -20%;
    animation: cardFloat1 4s ease-in-out infinite;
  }

  .card-2 {
    top: 40%;
    right: -30%;
    animation: cardFloat2 5s ease-in-out infinite reverse;
  }

  .card-3 {
    bottom: 15%;
    left: -25%;
    animation: cardFloat3 4.5s ease-in-out infinite;
  }

  .card-icon {
    width: 40px;
    height: 40px;
    background: var(--gradient-primary);
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-subsection);
    flex-shrink: 0;
    box-shadow: var(--shadow-md);
  }

  .card-content {
    flex: 1;
  }

  .card-title {
    font-size: var(--text-body);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-xs);
  }

  .card-subtitle {
    font-size: var(--text-body);
    color: var(--color-text-secondary);
  }

  /* Animations */
  @keyframes gridMove {
    0% { transform: translate(0, 0); }
    100% { transform: translate(60px, 60px); }
  }

  @keyframes orbFloat1 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(-30px, -30px) rotate(180deg); }
  }

  @keyframes orbFloat2 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(30px, 30px) rotate(-180deg); }
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @keyframes progressFill {
    0% { width: 30%; }
    50% { width: 70%; }
    100% { width: 50%; }
  }

  @keyframes cardFloat1 {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(2deg); }
  }

  @keyframes cardFloat2 {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(-2deg); }
  }

  @keyframes cardFloat3 {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-25px) rotate(1deg); }
  }

  /* Responsive Design */
  @media (max-width: $breakpoint-lg) {
    .floating-card {
      position: static;
      margin: 10px auto;
      transform: none !important;
      animation: none;
    }
    
    .card-1, .card-2, .card-3 {
      position: static;
      display: none; // Hide on mobile for cleaner look
    }
    
    .phone-container {
      width: 240px;
      height: 400px;
    }
  }

  @media (max-width: $breakpoint-sm) {
    .stats-row {
      justify-content: center;
    }
    
    .features-preview {
      justify-content: center;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none !important;
      transition: none !important;
    }
  }
</style>