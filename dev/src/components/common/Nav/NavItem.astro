---
interface Props {
  href: string;
  active?: boolean;
}

const { href, active = false } = Astro.props;
---

<a href={href} class={`nav__link ${active ? 'nav__link--active' : ''}`}>
  <slot />
</a>

<style lang="scss">
  .nav__link {
    font-size: 16px;
    text-transform: uppercase;
    font-weight: 400;
    letter-spacing: -0.5px;
    padding: 8px 12px;
    position: relative;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .nav__link:hover {
    color: var(--color-accent-primary);
    background-color: rgba(var(--color-accent-primary-rgb), 0.05);
  }

  .nav__link--active {
    color: var(--color-accent-primary);
  }

  .nav__link--active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 12px;
    right: 12px;
    height: 2px;
    background-color: var(--color-accent-primary);
  }

  /* Style for dropdown menu items */
  :global(.nav__dropdown-menu) .nav__link {
    display: block;
    width: 100%;
    padding: 10px 16px;
    text-transform: none;
    border-radius: 0;
    font-size: 15px;
    white-space: nowrap;
    border-bottom: 1px solid rgba(var(--color-accent-primary-rgb), 0.05);
  }

  :global(.nav__dropdown-menu) .nav__link:last-child {
    border-bottom: none;
  }

  @media (max-width: $breakpoint_md) {
    .nav__link {
      padding: 8px 6px;
      font-size: 14px;
      display: block;
    }
  }
</style>
