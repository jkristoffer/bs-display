#!/bin/sh
# ğŸ” CSS Quality Pre-commit Checks

echo "ğŸ” Running CSS quality checks..."

# Get staged CSS files
STAGED_CSS=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(css|scss)$')

if [ -n "$STAGED_CSS" ]; then
    echo "ğŸ“‹ Checking CSS files: $STAGED_CSS"
    
    # Run stylelint on staged files
    npx stylelint $STAGED_CSS
    if [ $? -ne 0 ]; then
        echo "âŒ CSS linting failed. Please fix the errors before committing."
        echo "ğŸ’¡ Run 'npm run lint:css:fix' to auto-fix some issues."
        exit 1
    fi
    
    echo "âœ… CSS linting passed"
else
    echo "â„¹ï¸  No CSS files to check"
fi

# TypeScript check
echo "ğŸ” Running TypeScript check..."
npm run check
if [ $? -ne 0 ]; then
    echo "âŒ TypeScript check failed. Please fix type errors before committing."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"