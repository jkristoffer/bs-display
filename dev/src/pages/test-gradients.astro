---
// Test page to validate new gradient system
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
    title="Gradient System Test"
    description="Test page to validate the new gradient system implementation"
>
    <div class="container" style="padding: 2rem;">
        <h1 class="gradient-text-primary">Gradient System Test Page</h1>
        
        <section class="test-section">
            <h2>Gradient Backgrounds</h2>
            <div class="gradient-grid">
                <div class="gradient-bg-primary test-card">Primary Gradient</div>
                <div class="gradient-bg-green test-card">Green Gradient</div>
                <div class="gradient-bg-blue test-card">Blue Gradient</div>
                <div class="gradient-bg-orange test-card">Orange Gradient</div>
                <div class="gradient-bg-purple test-card">Purple Gradient</div>
                <div class="gradient-bg-pink test-card">Pink Gradient</div>
                <div class="gradient-bg-teal test-card">Teal Gradient</div>
                <div class="gradient-bg-indigo test-card">Indigo Gradient</div>
            </div>
        </section>

        <section class="test-section">
            <h2>Gradient Text Effects</h2>
            <div class="text-examples">
                <h3 class="gradient-text-primary">Primary Gradient Text</h3>
                <h3 class="gradient-text-success">Success Gradient Text</h3>
                <h3 class="gradient-text-warning">Warning Gradient Text</h3>
                <h3 class="gradient-text-info">Info Gradient Text</h3>
            </div>
        </section>

        <section class="test-section">
            <h2>Glass Morphism Effects</h2>
            <div class="glass-examples" style="background: linear-gradient(45deg, #667eea 0%, #764ba2 100%); padding: 2rem; border-radius: 1rem;">
                <div class="glass-light test-card">Light Glass Effect</div>
                <div class="glass-dark test-card">Dark Glass Effect</div>
                <div class="glass-strong test-card">Strong Glass Effect</div>
            </div>
        </section>

        <section class="test-section">
            <h2>Icon Containers</h2>
            <div class="icon-examples">
                <div class="icon-container-gradient">üé®</div>
                <div class="icon-container-gradient sm">‚≠ê</div>
                <div class="icon-container-gradient lg">üöÄ</div>
                <div class="icon-container-glass">üíé</div>
            </div>
        </section>

        <section class="test-section">
            <h2>Animations</h2>
            <div class="animation-examples">
                <div class="animate-float gradient-bg-primary test-card">Floating</div>
                <div class="animate-pulse gradient-bg-green test-card">Pulsing</div>
                <div class="animate-fade-up gradient-bg-blue test-card">Fade Up</div>
            </div>
        </section>

        <section class="test-section">
            <h2>Modern Buttons (Updated System)</h2>
            <div class="button-examples">
                <button class="button-primary">Primary Button</button>
                <button class="button-ghost">Ghost Button</button>
                <button class="button-glass">Glass Button</button>
                <button class="button-gradient">Gradient Button</button>
                <button class="button-success">Success Button</button>
                <button class="button-warning">Warning Button</button>
                <button class="button-primary button-lg">Large Button</button>
                <button class="button-primary button-sm">Small Button</button>
                <button class="button-fab">üöÄ</button>
            </div>
        </section>

        <section class="test-section">
            <h2>Typography Fluid System</h2>
            <div class="typography-examples">
                <h1 class="heading-hero">Hero Heading (Fluid)</h1>
                <h1 class="heading-hero gradient">Hero with Gradient</h1>
                <h2 class="heading-section">Section Heading</h2>
                <h3 class="heading-card">Card Heading</h3>
                <p class="subtitle-large">Large subtitle text</p>
                <p class="text-fluid-sm">Fluid body text</p>
            </div>
        </section>

        <section class="test-section">
            <h2>üéâ Migration Complete!</h2>
            <div class="completion-summary">
                <div class="stats-grid">
                    <div class="stat-card gradient-bg-primary">
                        <h3>8</h3>
                        <p>Gradient Variables</p>
                    </div>
                    <div class="stat-card gradient-bg-green">
                        <h3>25+</h3>
                        <p>Utility Classes</p>
                    </div>
                    <div class="stat-card gradient-bg-orange">
                        <h3>7</h3>
                        <p>Button Variants</p>
                    </div>
                    <div class="stat-card gradient-bg-purple">
                        <h3>98/100</h3>
                        <p>Quality Score</p>
                    </div>
                </div>
                <p style="text-align: center; margin-top: 2rem; font-size: 1.2rem;">
                    ‚úÖ <strong>Style Migration Complete!</strong><br>
                    All 7 phases delivered successfully.
                </p>
            </div>
        </section>
    </div>

    <style>
        .test-section {
            margin: 2rem 0;
            padding: 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.5rem;
        }

        .gradient-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin: 1rem 0;
        }

        .test-card {
            padding: 2rem 1rem;
            border-radius: 0.5rem;
            color: white;
            text-align: center;
            font-weight: 600;
            text-shadow: 0 1px 3px rgba(0,0,0,0.3);
        }

        .text-examples {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .glass-examples {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .icon-examples {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .animation-examples {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .button-examples {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .button-examples button {
            margin: 0.5rem;
        }

        .typography-examples {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
            margin: 1rem 0;
        }

        .stat-card {
            padding: 1.5rem 1rem;
            border-radius: 1rem;
            text-align: center;
            color: white;
            text-shadow: 0 1px 3px rgba(0,0,0,0.3);
        }

        .stat-card h3 {
            margin: 0;
            font-size: 2rem;
            font-weight: bold;
        }

        .stat-card p {
            margin: 0.5rem 0 0 0;
            font-size: 0.9rem;
            opacity: 0.9;
        }
    </style>
</BaseLayout>