    "ai:tools:list": "node scripts/list-automation-tools.js",
    "help": "node scripts/help-system.js",
    "git:commit:ai": "node scripts/ai-wrapper.js ./scripts/commit",
    "git:status:json": "git status --short | node scripts/json-formatter.js --type=gitStatus",
    "content:blog:ai": "node scripts/ai-wrapper.js node scripts/generate-blog-post.js",
    "ai:validate:all": "node scripts/validate-tools.js",
