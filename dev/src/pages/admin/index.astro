---
import AdminLayout from '@layouts/AdminLayout.astro';
import DemoOverview from '@components/admin/dashboards/DemoOverview';

// Make this page server-rendered so middleware can access headers
export const prerender = false;
---

<AdminLayout 
  title="Dashboard Overview" 
  description="Business Intelligence Dashboard"
>
  <div class="admin-dashboard">
    <div class="container">
      <h1>Business Intelligence Dashboard</h1>
      <p class="welcome-message">Welcome to the admin dashboard. Analytics implementation coming soon.</p>
      
      <div class="quick-links">
        <h2>Dashboard Sections</h2>
        <div class="links-grid">
          <a href="/admin/analytics/overview" class="dashboard-link">
            <span class="icon">üìä</span>
            <span class="title">Analytics Overview</span>
            <span class="description">Key metrics and trends</span>
          </a>
          <a href="/admin/analytics/realtime" class="dashboard-link">
            <span class="icon">‚ö°</span>
            <span class="title">Real-time Metrics</span>
            <span class="description">Live visitor tracking</span>
          </a>
          <a href="/admin/analytics/products" class="dashboard-link">
            <span class="icon">üì¶</span>
            <span class="title">Product Analytics</span>
            <span class="description">Product performance data</span>
          </a>
          <a href="/admin/analytics/journeys" class="dashboard-link">
            <span class="icon">üõ§Ô∏è</span>
            <span class="title">Customer Journeys</span>
            <span class="description">User behavior analysis</span>
          </a>
        </div>
      </div>
      
      <div class="auth-info">
        <p>This area is protected by authentication. Only authorized users can access these dashboards.</p>
      </div>
      
      <div class="demo-section">
        <DemoOverview client:load />
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  .admin-dashboard {
    padding: 4rem 0;
    min-height: 80vh;
    background: var(--color-surface-primary);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .welcome-message {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 3rem;
  }
  
  .quick-links {
    margin-bottom: 3rem;
  }
  
  .quick-links h2 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    color: var(--color-text-primary);
  }
  
  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }
  
  .dashboard-link {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    background: var(--color-surface-secondary);
    border: 2px solid var(--color-border);
    border-radius: 12px;
    text-decoration: none;
    color: var(--color-text-primary);
    transition: all 0.3s var(--transition-smooth);
    position: relative;
    overflow: hidden;
  }
  
  .dashboard-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-primary);
    transform: translateX(-100%);
    transition: transform 0.3s var(--transition-smooth);
  }
  
  .dashboard-link:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }
  
  .dashboard-link:hover::before {
    transform: translateX(0);
  }
  
  .dashboard-link .icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .dashboard-link .title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .dashboard-link .description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }
  
  .auth-info {
    padding: 1.5rem;
    background: var(--color-surface-tertiary);
    border-radius: 8px;
    border-left: 4px solid var(--color-primary);
  }
  
  .auth-info p {
    margin: 0;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }
  
  .demo-section {
    margin-top: 3rem;
  }
  
  @media (max-width: 768px) {
    .admin-dashboard {
      padding: 2rem 0;
    }
    
    h1 {
      font-size: 2rem;
    }
    
    .welcome-message {
      font-size: 1.125rem;
    }
    
    .links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>