---
import NavItem from './NavItem.astro';

interface Props {
  currentPath?: string;
}

const currentPath = Astro.url.pathname;

const navItems = [
  { path: '/', label: 'Home' },
  {
    label: 'Products',
    dropdown: true,
    items: [
      { path: '/products/smart-boards', label: 'Smart Boards' },
      { path: '/products/lecterns', label: 'Lecterns' }
    ]
  },
  {
    label: 'Solutions',
    dropdown: true,
    items: [
      { path: '/solutions/classrooms', label: 'For Classrooms' },
      { path: '/solutions/offices', label: 'For Offices & Boardrooms' },
      { path: '/solutions/training', label: 'For Training Centers' }
    ]
  },
  {
    label: 'Learn',
    dropdown: true,
    items: [
      { path: '/learn/buying-guide', label: 'Smart Whiteboard Buying Guide' },
      { path: '/learn/blog', label: 'Blog' },
      { path: '/learn/comparison', label: 'Comparison Table' },
      { path: '/learn/how-smartboards-work', label: 'How Smartboards Work' }
    ]
  },
  { path: '/contact', label: 'Contact' }
];
---

<nav class="main-nav">
  <div class="container">
    <div class="logo-container">
      <a href="/">
        <img src="/assets/logo3.png" alt="Big Shine Display Logo" />
      </a>
    </div>
    <div class="nav-items">
      {
        navItems.map((item) =>
          item.dropdown ? (
            <div class="dropdown-container">
              <div class="dropdown-trigger">
                {item.label} <span class="dropdown-arrow">â–¾</span>
              </div>
              <div class="dropdown-menu">
                {item.items.map((subItem) => (
                  <NavItem
                    href={subItem.path}
                    active={currentPath === subItem.path}
                  >
                    {subItem.label}
                  </NavItem>
                ))}
              </div>
            </div>
          ) : (
            <NavItem href={item.path} active={currentPath === item.path}>
              {item.label}
            </NavItem>
          )
        )
      }
    </div>
    <button
      id="mobile-menu-toggle"
      class="mobile-menu-toggle"
      aria-label="Toggle menu"
    >
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-toggle');
  btn.addEventListener('click', () => {
    btn.classList.toggle('active');
    document.querySelector('.nav-items').classList.toggle('active');
  });

  // Mobile dropdown functionality
  if (window.innerWidth <= 768) {
    // Assuming $breakpoint-md is 768px
    const dropdownTriggers = document.querySelectorAll('.dropdown-trigger');

    dropdownTriggers.forEach((trigger) => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        const container = trigger.closest('.dropdown-container');
        container.classList.toggle('active');
      });
    });
  }
</script>

<style lang="scss">
  .main-nav {
    width: 100%;
    background-color: var(--color-background);
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid rgba(var(--color-accent-primary-rgb), 0.1);
  }

  .main-nav > .container {
    width: 100%;
    max-width: var(--spacing-container-max-width);
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) var(--spacing-lg);
    margin: 0 auto;
  }

  .logo-container {
    width: 140px;
  }

  .logo-container img {
    width: 100%;
    transition: transform 0.3s ease;
  }

  .logo-container:hover img {
    transform: scale(1.05);
  }

  .nav-items {
    display: flex;
    gap: var(--spacing-xl);
    margin-left: auto;
    align-items: center;
  }

  .dropdown-container {
    position: relative;
    cursor: pointer;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .dropdown-trigger {
    font-size: var(--font-size-body-regular);
    text-transform: uppercase;
    font-weight: var(--font-weight-regular);
    letter-spacing: -0.5px;
    padding: var(--spacing-sm) var(--spacing-md);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    transition: all 0.3s ease;
    border-radius: 4px;
    position: relative;
  }

  .dropdown-trigger:hover {
    color: var(--color-accent-primary);
    background-color: rgba(var(--color-accent-primary-rgb), 0.05);
  }

  .dropdown-arrow {
    font-size: 12px;
    margin-left: var(--spacing-xs);
    color: var(--color-accent-primary);
    transition: transform 0.2s ease;
  }

  .dropdown-container:hover .dropdown-arrow {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: calc(100% + var(--spacing-sm));
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--color-background);
    min-width: 240px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    padding: var(--spacing-sm) 0;
    display: none;
    z-index: 200;
    opacity: 0;
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    border: 1px solid rgba(var(--color-accent-primary-rgb), 0.1);
  }

  .dropdown-menu::before {
    content: '';
    position: absolute;
    top: -6px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    background-color: var(--color-background);
    border-left: 1px solid rgba(var(--color-accent-primary-rgb), 0.1);
    border-top: 1px solid rgba(var(--color-accent-primary-rgb), 0.1);
  }

  .dropdown-container:hover .dropdown-menu {
    display: block;
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-sm);
    border-radius: 4px;
  }

  .mobile-menu-toggle span {
    display: block;
    width: 25px;
    height: 2px;
    background-color: var(--color-text-primary);
    margin: 6px 0;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  @media (max-width: 768px) {
    .main-nav > .container {
      padding: var(--spacing-sm) var(--spacing-md);
    }

    .nav-items {
      display: none;
    }

    .dropdown-container {
      width: 100%;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .dropdown-trigger {
      padding: var(--spacing-md) var(--spacing-lg);
      justify-content: space-between;
      width: 100%;
      border-radius: 0;
    }

    .dropdown-menu {
      position: static;
      display: none;
      box-shadow: none;
      padding: 0;
      border: none;
      border-radius: 0;
      min-width: 100%;
      transform: none;
      opacity: 1;
      background-color: rgba(var(--color-accent-primary-rgb), 0.03);
    }

    .dropdown-menu::before {
      display: none;
    }

    .mobile-menu-toggle {
      display: block;
    }
  }
</style>
