                  <time datetime={post.data.publishDate.toISOString()} class="card-date">
                    {formatDate(post.data.publishDate)}
                  </time>
                </div>
                
                <h4 class="card-title">
                  <a href={`/blog/${post.id}`}>{post.data.title}</a>
                </h4>
                
                <p class="card-excerpt">{post.data.description}</p>
                
