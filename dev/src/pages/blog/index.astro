---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

// Get all blog posts and sort by publish date (newest first)
const allBlogPosts = await getCollection('blog');
const sortedPosts = allBlogPosts.sort((a, b) => 
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Format date function
function formatDate(date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<MainLayout 
  title="Blog | Big Shine Display" 
  description="Explore the latest insights, guides, and industry news about smart displays, interactive whiteboards, and digital signage solutions."
>
  <div class="blog-index-container">
    <header class="blog-header">
      <h1>Blog</h1>
      <p>Insights, guides, and industry news about smart display technologies</p>
    </header>

    <div class="blog-posts-grid">
      {sortedPosts.map(post => (
        <article class="blog-card">
          {post.data.image && (
            <div class="blog-card-image">
              <img src={post.data.image} alt={post.data.title} />
            </div>
          )}
          <div class="blog-card-content">
            {post.data.category && (
              <span class="blog-category">{post.data.category}</span>
            )}
            <h2>
              <a href={`/blog/${post.slug}`}>{post.data.title}</a>
            </h2>
            <p class="blog-excerpt">{post.data.description}</p>
            <div class="blog-meta">
              {post.data.publishDate && (
                <time datetime={post.data.publishDate.toISOString()}>
                  {formatDate(post.data.publishDate)}
                </time>
              )}
              {post.data.author && (
                <span class="blog-author">By {post.data.author}</span>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</MainLayout>

<style>
  .blog-index-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .blog-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .blog-header p {
    color: #666;
    font-size: 1.1rem;
  }

  .blog-posts-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .blog-posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .blog-posts-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .blog-card {
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: #fff;
  }

  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
  }

  .blog-card-image {
    height: 200px;
    overflow: hidden;
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-card-content {
    padding: 1.5rem;
  }

  .blog-category {
    display: inline-block;
    background-color: #f0f0f0;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.8rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .blog-card h2 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .blog-card h2 a {
    color: inherit;
    text-decoration: none;
  }

  .blog-card h2 a:hover {
    color: #0066cc;
  }

  .blog-excerpt {
    color: #555;
    margin-bottom: 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .blog-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.85rem;
    color: #666;
    flex-wrap: wrap;
  }
</style>
