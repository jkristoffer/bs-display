---
interface Props {
  title: string;
  image: string;
  points: string[];
}
const { title, image, points } = Astro.props;
---

<div class="buying-guide-item">
  <img class="item-icon" src={image} alt={title} height={60} width={60} />

  <h3 class="item-title">{title}</h3>
  <ul class="item-points">
    {points.map((point) => <li set:html={point} />)}
  </ul>
</div>

<style lang="scss">
  .buying-guide-item {
    background-color: white;
    border-radius: 8px;
    padding: var(--spacing-lg);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    align-items: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .buying-guide-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.12);
  }

  .item-title {
    color: var(--color-accent-primary);
    margin-top: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
    font-size: var(--font-size-h3);
    font-weight: var(--font-weight-bold);
    text-align: center;
  }

  .item-points {
    list-style-type: none;
    padding-left: 0;
    margin: 0;
    flex-grow: 1;
  }

  .item-points li {
    margin-bottom: var(--spacing-md);
    line-height: 1.5;
    position: relative;
    padding-left: var(--spacing-md);
    color: var(--color-text-primary, #333);
  }
  
  .item-points li::before {
    content: 'â€¢';
    color: var(--color-accent-secondary);
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  .item-points li:last-child {
    margin-bottom: 0;
  }
</style>
