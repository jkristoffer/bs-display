---
interface CtaButton {
  text: string;
  link: string;
  type: 'primary' | 'ghost';
}

const {
  title = 'Need Expert Advice?',
  introText = 'Our product specialists are ready to help you find the perfect smart whiteboard solution for your specific needs.',
  ctaButtons = [
    {
      text: 'Request a Quote â†’',
      link: '/contact',
      type: 'primary'
    },
    {
      text: 'Download Full Buying Guide PDF',
      link: '#',
      type: 'ghost'
    },
    {
      text: 'Schedule a Consultation',
      link: '/contact',
      type: 'ghost'
    }
  ]
} = Astro.props;
---

<section id="expert-advice" class="content-section bg-accent">
  <div class="container">
    <h2>{title}</h2>
    <p class="section-intro">
      {introText}
    </p>
    <div class="cta-group">
      {
        ctaButtons.map((button: CtaButton) => (
          <a href={button.link} class={`button-${button.type}`}>
            {button.text}
          </a>
        ))
      }
    </div>
  </div>
</section>
