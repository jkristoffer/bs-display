---
import Button from '../../common/Button/Button.astro';
import BuyingGuideItem from './BuyingGuideItem.astro';

const screenResImage = '/assets/images/icons/screen-res-184w.png';
const touchTechImage = '/assets/images/icons/touch-tech-184w.png';
const useCasesImage = '/assets/images/icons/match-usecase-184w.png';

const guideItems = [
  {
    title: 'Screen Size & Resolution',
    image: screenResImage,
    points: [
      'Find the right display size for your room dimensions.',
      'Learn about 4K vs 1080p resolution and when each is appropriate.'
      // 'Linked article: <a href="/blog/screen-size-guide">Screen Size Calculator</a>'
    ]
  },
  {
    title: 'Touch Technology',
    image: touchTechImage,
    points: [
      'Compare infrared, capacitive, and electromagnetic touch systems.',
      'Learn which technologies support pen input, multi-touch, and palm rejection.'
      // 'Linked article: <a href="/blog/touch-technology-comparison">Touch Tech Comparison Table</a>'
    ]
  },
  {
    title: 'Matching Use Cases to Models',
    image: useCasesImage,
    points: [
      'Discover the best boards for classrooms, meeting rooms, and training centers.',
      'Quickly match your environment and needs to specific models.'
      // 'Linked resource: <a href="/solutions/">Interactive Board Use Cases</a>'
    ]
  }
];
---

<section class="buying-guide-section">
  <div class="buying-guide-container">
    <div class="section-header">
      <h2>
        <span class="title-gradient-dark">Your Display Buying Guide</span>
      </h2>
      <p class="intro-text">
        Navigate the world of interactive displays with our comprehensive resources
      </p>
    </div>

  <div class="guide-items-container">
    {
      guideItems.map((item) => (
        <BuyingGuideItem
          title={item.title}
          image={item.image}
          points={item.points}
        />
      ))
    }
  </div>

    <div class="cta-container">
      <Button variant="primary" href="/smart-whiteboard-buying-guide">
        View Complete Buying Guide
      </Button>
    </div>
  </div>
</section>

<style lang="scss">
  .buying-guide-section {
    position: relative;
    padding: calc(var(--spacing-xl) * 2) 0;
    background-size: cover;
    background-position: center;
    color: white;
    overflow: hidden;
  }

  .buying-guide-container {
    max-width: var(--spacing-container-max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
    position: relative;
    z-index: 2;
  }

  /* Modern Header Styles */
  .section-header {
    text-align: center;
    margin-bottom: calc(var(--spacing-xl) * 2);
  }

  h2 {
    font-size: clamp(32px, 5vw, 48px);
    margin-bottom: var(--spacing-md);
    font-weight: 700;
  }

  .title-gradient-dark {
    background: linear-gradient(135deg, #ffffff 0%, #f0f4f8 50%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
  }

  .intro-text {
    font-size: clamp(18px, 2.5vw, 24px);
    max-width: 750px;
    margin: 0 auto;
    opacity: 0.9;
    font-weight: 400;
    line-height: 1.7;
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .guide-items-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 12px;
    padding: var(--spacing-xl);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
    width: 100%;
    color: var(--color-text-primary, #333);
  }

  .cta-container {
    text-align: center;
    margin-top: 2rem;
  }

  @media (max-width: 992px) {
    .guide-items-container {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
      padding: var(--spacing-lg);
    }
  }

  @media (max-width: 768px) {
    .guide-items-container {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
      padding: var(--spacing-md);
    }

    .intro-text {
      font-size: var(--font-size-base);
      padding: 0 var(--spacing-md);
    }
  }
</style>
