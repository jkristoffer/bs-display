    />

    <TableOfContents items={tocItems} />

    <WhatIsSection />

    <WhyChooseSection />

    <UseCasesSection
      useCases={[
        {
          title: 'Classrooms & Education',
          recommendation: 'LED + IR (Affordable & Robust)',
