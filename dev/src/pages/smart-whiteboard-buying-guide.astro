---
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/index.scss';
import '../styles/sw-buying-guide.scss';

// Import components
import Header from '../components/sw-buying-guide/Header.astro';
import TableOfContents from '../components/sw-buying-guide/TableOfContents.astro';
import WhatIsSection from '../components/sw-buying-guide/WhatIsSection.astro';
import WhyChooseSection from '../components/sw-buying-guide/WhyChooseSection.astro';
import UseCasesSection from '../components/sw-buying-guide/UseCasesSection.astro';
import DisplayTechSection from '../components/sw-buying-guide/DisplayTechSection.astro';
import TouchTechSection from '../components/sw-buying-guide/TouchTechSection.astro';
import ComparisonChartSection from '../components/sw-buying-guide/ComparisonChartSection.astro';
import CombinationsSection from '../components/sw-buying-guide/CombinationsSection.astro';
import BrandsSection from '../components/sw-buying-guide/BrandsSection.astro';
import FaqsSection from '../components/sw-buying-guide/FaqsSection.astro';
import ExpertAdviceSection from '../components/sw-buying-guide/ExpertAdviceSection.astro';
import RelatedPostsSection from '../components/sw-buying-guide/RelatedPostsSection.astro';

// Define metadata for the page
const title = 'Smart Whiteboard Buying Guide | BS Display';
const description =
  'Everything you need to know before choosing the right interactive display for your needs - from display technologies to touch capabilities and recommended models.';

// Define table of contents items
const tocItems = [
  { href: '#what-is', text: 'What is a Smart Whiteboard?' },
  { href: '#why-choose', text: 'Why Choose Interactive Whiteboards?' },
  { href: '#use-cases', text: 'Use Case Scenarios' },
  { href: '#display-tech', text: 'Display Technologies Explained' },
  { href: '#touch-tech', text: 'Touch Technologies Breakdown' },
  { href: '#comparison', text: 'Interactive Display Comparison Chart' },
  { href: '#combinations', text: 'Best Combinations by Use Case & Budget' },
  { href: '#brands', text: 'Top Brands & Recommended Models' },
  { href: '#faqs', text: 'FAQs' },
  { href: '#expert-advice', text: 'Need Expert Advice?' }
];
---

<MainLayout title={title} description={description}>
  <div class="whiteboard-guide">
    <Header
      title="Smart Whiteboard Buying Guide"
