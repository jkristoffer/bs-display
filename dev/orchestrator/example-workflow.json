{
  "name": "User Dashboard Feature",
  "description": "Build a complete user dashboard with profile management",
  "tasks": [
    {
      "name": "Create UserProfile Component",
      "template": "feature/react-component",
      "inputs": {
        "component_name": "UserProfile",
        "component_description": "Displays user profile information with edit capabilities",
        "category": "user",
        "props": [
          {
            "name": "user",
            "type": "User",
            "description": "User object with profile data"
          },
          {
            "name": "onEdit",
            "type": "() => void",
            "description": "Callback when edit button is clicked"
          },
          {
            "name": "isLoading",
            "type": "boolean",
            "description": "Loading state indicator"
          }
        ],
        "behavior_description": "Shows user avatar, name, email, and bio. Displays edit button when not loading.",
        "ui_elements": ["Avatar image", "User name heading", "Email text", "Bio paragraph", "Edit button"]
      }
    },
    {
      "name": "Create formatUserData Utility",
      "template": "function/utility",
      "inputs": {
        "function_name": "formatUserData",
        "function_description": "Formats raw user data from API into display format",
        "function_signature": "(userData: RawUserData): FormattedUser",
        "inputs": [
          {
            "name": "userData",
            "type": "RawUserData",
            "description": "Raw user data from API",
            "constraints": "May have missing fields"
          }
        ],
        "output_type": "FormattedUser",
        "output_description": "User data formatted for display",
        "detailed_behavior": "Transforms API response to UI-friendly format. Handles missing fields with defaults. Formats dates to readable strings.",
        "edge_cases": [
          {
            "condition": "Missing avatar URL",
            "expected_behavior": "Use default avatar placeholder"
          },
          {
            "condition": "Invalid date format",
            "expected_behavior": "Return 'Unknown' for date fields"
          }
        ],
        "examples": [
          {
            "input": "{id: '123', first_name: 'John', last_name: 'Doe', created_at: '2024-01-01T00:00:00Z'}",
            "output": "{id: '123', fullName: 'John Doe', joinDate: 'January 1, 2024', avatar: '/default-avatar.png'}",
            "explanation": "Combines names and formats date"
          }
        ],
        "time_complexity": "O(1)",
        "space_complexity": "O(1)",
        "optimization_priority": "Readability and null safety"
      }
    },
    {
      "name": "Create UserStats Component",
      "template": "feature/react-component",
      "inputs": {
        "component_name": "UserStats",
        "component_description": "Displays user statistics in a grid layout",
        "category": "user",
        "props": [
          {
            "name": "stats",
            "type": "UserStatistics",
            "description": "Object containing user statistics"
          },
          {
            "name": "onStatClick",
            "type": "(statType: string) => void",
            "description": "Callback when a stat card is clicked"
          }
        ],
        "behavior_description": "Renders statistics in responsive grid. Each stat shows icon, value, and label. Cards are clickable.",
        "ui_elements": ["Stats grid container", "Stat cards", "Icons", "Values", "Labels"]
      }
    }
  ]
}