---
import Button from '../../common/Button/Button.astro';
import BuyingGuideItem from './BuyingGuideItem.astro';

const screenResImage = '/assets/images/icons/screen-res-184w.png';
const touchTechImage = '/assets/images/icons/touch-tech-184w.png';
const useCasesImage = '/assets/images/icons/match-usecase-184w.png';

const guideItems = [
  {
    title: 'Screen Size & Resolution',
    image: screenResImage,
    points: [
      'Find the right display size for your room dimensions.',
      'Learn about 4K vs 1080p resolution and when each is appropriate.'
      // 'Linked article: <a href="/blog/screen-size-guide">Screen Size Calculator</a>'
    ]
  },
  {
    title: 'Touch Technology',
    image: touchTechImage,
    points: [
      'Compare infrared, capacitive, and electromagnetic touch systems.',
      'Learn which technologies support pen input, multi-touch, and palm rejection.'
      // 'Linked article: <a href="/blog/touch-technology-comparison">Touch Tech Comparison Table</a>'
    ]
  },
  {
    title: 'Matching Use Cases to Models',
    image: useCasesImage,
    points: [
      'Discover the best boards for classrooms, meeting rooms, and training centers.',
      'Quickly match your environment and needs to specific models.'
      // 'Linked resource: <a href="/solutions/">Interactive Board Use Cases</a>'
    ]
  }
];
---

<div class="buying-guide-section">
  <h2>Buying Guide</h2>
  <p class="intro-text">
    Navigate the world of interactive displays with our comprehensive resources
  </p>

  <div class="guide-items-container">
    {
      guideItems.map((item) => (
        <BuyingGuideItem
          title={item.title}
          image={item.image}
          points={item.points}
        />
      ))
    }
  </div>

  <div class="cta-container">
    <Button variant="primary" href="/smart-whiteboard-buying-guide">
      View Complete Buying Guide
    </Button>
  </div>
</div>

<style lang="scss">
  .buying-guide-section {
    position: relative;
    padding: var(--spacing-xl) 0;
    background-size: cover;
    background-position: center;
    border-radius: 12px;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  h2 {
    font-size: var(--font-size-h2);
    color: white;
    text-transform: uppercase;
    position: relative;
    display: inline-block;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    z-index: 1;
  }

  h2:before {
    content: '';
    display: block;
    width: 80px;
    height: 30px;
    background-color: var(--color-accent-secondary);
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.61;
    z-index: -1;
    border-radius: 4px;
  }

  .intro-text {
    font-size: var(--font-size-lg);
    max-width: 750px;
    margin: 0 auto var(--spacing-xl);
    opacity: 0.9;
    font-weight: 300;
    line-height: 1.5;
  }

  .guide-items-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 12px;
    padding: var(--spacing-xl);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
    width: 100%;
    color: var(--color-text-primary, #333);
  }

  .cta-container {
    text-align: center;
    margin-top: 2rem;
  }

  @media (max-width: 992px) {
    .guide-items-container {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
      padding: var(--spacing-lg);
    }
  }

  @media (max-width: 768px) {
    .guide-items-container {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
      padding: var(--spacing-md);
    }

    .intro-text {
      font-size: var(--font-size-base);
      padding: 0 var(--spacing-md);
    }
  }
</style>
