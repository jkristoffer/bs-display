{
  "name": "FAQ Page Feature",
  "description": "Create a complete FAQ page with search functionality",
  "tasks": [
    {
      "name": "Create FAQ page component",
      "template": "feature/react-component",
      "inputs": {
        "component_name": "FAQPage",
        "component_description": "Main FAQ page with categorized questions and search functionality",
        "category": "pages",
        "props": [
          {
            "name": "categories",
            "type": "FAQCategory[]",
            "description": "Array of FAQ categories with questions"
          }
        ],
        "behavior_description": "Displays FAQ categories with expandable questions. Includes search functionality to filter questions. Smooth accordion animations for expanding/collapsing answers.",
        "ui_elements": ["Search input", "Category sections", "Question/Answer accordions", "No results message"]
      }
    },
    {
      "name": "Create FAQ search utility",
      "template": "function/utility",
      "inputs": {
        "function_name": "searchFAQs",
        "function_description": "Searches FAQ items by question or answer content",
        "function_signature": "(faqs: FAQ[], searchTerm: string): FAQ[]",
        "inputs": [
          {
            "name": "faqs",
            "type": "FAQ[]",
            "description": "Array of FAQ items to search",
            "constraints": "Non-empty array"
          },
          {
            "name": "searchTerm",
            "type": "string",
            "description": "Search query string",
            "constraints": "Case-insensitive search"
          }
        ],
        "output_type": "FAQ[]",
        "output_description": "Filtered FAQ items matching search term",
        "detailed_behavior": "Performs case-insensitive search across question and answer fields. Returns empty array if no matches. Trims search term before matching.",
        "edge_cases": [
          {
            "condition": "Empty search term",
            "expected_behavior": "Return all FAQs"
          },
          {
            "condition": "No matches found",
            "expected_behavior": "Return empty array"
          }
        ],
        "examples": [
          {
            "input": "[{question: 'What is a smartboard?', answer: '...'}, {question: 'How to install?', answer: '...'}], 'smart'",
            "output": "[{question: 'What is a smartboard?', answer: '...'}]",
            "explanation": "Matches 'smart' in question"
          }
        ],
        "time_complexity": "O(n)",
        "space_complexity": "O(n)",
        "optimization_priority": "Readability and accuracy"
      }
    },
    {
      "name": "Create FAQ item component",
      "template": "feature/react-component",
      "inputs": {
        "component_name": "FAQItem",
        "component_description": "Individual FAQ question/answer accordion item",
        "category": "common",
        "props": [
          {
            "name": "question",
            "type": "string",
            "description": "The FAQ question text"
          },
          {
            "name": "answer",
            "type": "string",
            "description": "The FAQ answer text"
          },
          {
            "name": "isExpanded",
            "type": "boolean",
            "description": "Whether the answer is visible"
          },
          {
            "name": "onToggle",
            "type": "() => void",
            "description": "Callback when item is clicked"
          }
        ],
        "behavior_description": "Shows question with expand/collapse icon. Clicking toggles answer visibility with smooth animation. Icon rotates when expanded.",
        "ui_elements": ["Question text", "Expand/collapse icon", "Answer text (collapsible)", "Click area"]
      }
    }
  ]
}