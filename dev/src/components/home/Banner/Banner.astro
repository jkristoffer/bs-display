---
import Button from '../../common/Button/Button.astro';

interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="banner full-width-container">
  <div class="content">
    <h1>{title}</h1>
    {subtitle && <p class="subtitle">{subtitle}</p>}
    
    <div class="interactive-demo">
      <!-- Main product image with touch simulation -->
      <div class="product-showcase">
        <img
          class="i-board"
          src="/assets/images/marketing/interactive-board.png"
          alt="Interactive Smart Board"
        />
        
        <!-- Animated touch points -->
        <div class="touch-point touch-point-1" aria-hidden="true"></div>
        <div class="touch-point touch-point-2" aria-hidden="true"></div>
        <div class="touch-point touch-point-3" aria-hidden="true"></div>
      </div>
      
      <!-- Floating feature icons -->
      <div class="floating-features">
        <div class="feature-icon feature-touch" aria-hidden="true">
          <span class="icon">üëÜ</span>
          <span class="label">Multi-Touch</span>
        </div>
        <div class="feature-icon feature-wireless" aria-hidden="true">
          <span class="icon">üì∂</span>
          <span class="label">Wireless</span>
        </div>
        <div class="feature-icon feature-collaboration" aria-hidden="true">
          <span class="icon">üë•</span>
          <span class="label">Collaboration</span>
        </div>
        <div class="feature-icon feature-cloud" aria-hidden="true">
          <span class="icon">‚òÅÔ∏è</span>
          <span class="label">Cloud Ready</span>
        </div>
      </div>
      
      <!-- Connection particles -->
      <div class="particles" aria-hidden="true">
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
        <div class="particle particle-3"></div>
        <div class="particle particle-4"></div>
        <div class="particle particle-5"></div>
        <div class="particle particle-6"></div>
      </div>
    </div>
    
    <div class="cta-holder">
      <Button variant="primary" size="lg" href="/contact" id="banner-quote-cta">Get Your Free Quote</Button>
      <Button variant="ghost" href="/demo" id="banner-demo-cta">See It In Action</Button>
    </div>
  </div>
</section>

<style lang="scss">
  .banner {
    text-align: center;
    background-image: url(/assets/abstract-bg-1.jpeg);
    background-size: cover;
    padding-bottom: 30px;
    position: relative;
    overflow: hidden;
  }

  .content {
    padding: 50px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    color: rgba(0, 0, 0, 0.7);
    font-size: 80px;
    letter-spacing: -5px;
    line-height: 0.8em;
    margin: 0;
    padding: 50px 0 20px;
    text-shadow: -4px 4px 2px rgba(255, 255, 255, 0.25);
    animation: fadeInUp 1s ease-out;
  }

  .subtitle {
    font-size: var(--text-body);
    margin-bottom: 30px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 1s ease-out 0.2s both;
  }

  /* Interactive Demo Container */
  .interactive-demo {
    position: relative;
    margin: 40px auto;
    max-width: 800px;
    animation: fadeInUp 1s ease-out 0.4s both;
  }

  /* Product Showcase */
  .product-showcase {
    position: relative;
    display: inline-block;
  }

  .i-board {
    width: 600px;
    margin: 0 auto;
    max-width: 80%;
    transition: transform 0.5s ease;
    animation: float 6s ease-in-out infinite;
  }

  .i-board:hover {
    transform: scale(1.02);
  }

  /* Touch Point Animations */
  .touch-point {
    position: absolute;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.6) 0%, rgba(59, 130, 246, 0.1) 70%);
    border: 2px solid rgba(59, 130, 246, 0.8);
    animation: touchPulse 2s ease-in-out infinite;
    pointer-events: none;
  }

  .touch-point-1 {
    top: 25%;
    left: 35%;
    animation-delay: 0s;
  }

  .touch-point-2 {
    top: 45%;
    right: 30%;
    animation-delay: 0.7s;
  }

  .touch-point-3 {
    bottom: 30%;
    left: 45%;
    animation-delay: 1.4s;
  }

  /* Floating Feature Icons */
  .floating-features {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .feature-icon {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.95);
    padding: 12px 16px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    animation: floatFeature 4s ease-in-out infinite;
    backdrop-filter: blur(10px);
  }

  .feature-icon .icon {
    font-size: 24px;
    display: block;
  }

  .feature-icon .label {
    font-size: 12px;
    font-weight: 600;
    color: var(--color-text-primary);
    white-space: nowrap;
  }

  .feature-touch {
    top: 10%;
    left: -10%;
    animation-delay: 0s;
  }

  .feature-wireless {
    top: 15%;
    right: -8%;
    animation-delay: 1s;
  }

  .feature-collaboration {
    bottom: 20%;
    left: -12%;
    animation-delay: 2s;
  }

  .feature-cloud {
    bottom: 15%;
    right: -10%;
    animation-delay: 3s;
  }

  /* Particle System */
  .particles {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: linear-gradient(45deg, #3b82f6, #10b981);
    border-radius: 50%;
    animation: particleMove 8s linear infinite;
    opacity: 0;
  }

  .particle-1 {
    top: 20%;
    left: 20%;
    animation-delay: 0s;
  }

  .particle-2 {
    top: 30%;
    right: 25%;
    animation-delay: 1.5s;
  }

  .particle-3 {
    bottom: 40%;
    left: 30%;
    animation-delay: 3s;
  }

  .particle-4 {
    bottom: 25%;
    right: 20%;
    animation-delay: 4.5s;
  }

  .particle-5 {
    top: 50%;
    left: 10%;
    animation-delay: 6s;
  }

  .particle-6 {
    top: 60%;
    right: 15%;
    animation-delay: 7.5s;
  }

  .cta-holder {
    padding: 15px 0;
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 1s ease-out 0.6s both;
  }

  /* Keyframe Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  @keyframes touchPulse {
    0% {
      transform: scale(0.8);
      opacity: 0;
    }
    20% {
      transform: scale(1);
      opacity: 1;
    }
    80% {
      transform: scale(1.2);
      opacity: 0.7;
    }
    100% {
      transform: scale(1.4);
      opacity: 0;
    }
  }

  @keyframes floatFeature {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
      opacity: 0.8;
    }
    25% {
      transform: translateY(-8px) rotate(1deg);
      opacity: 1;
    }
    75% {
      transform: translateY(-4px) rotate(-1deg);
      opacity: 0.9;
    }
  }

  @keyframes particleMove {
    0% {
      opacity: 0;
      transform: translateY(0) translateX(0) scale(0.5);
    }
    10% {
      opacity: 1;
      transform: translateY(-20px) translateX(10px) scale(1);
    }
    90% {
      opacity: 1;
      transform: translateY(-40px) translateX(-10px) scale(1);
    }
    100% {
      opacity: 0;
      transform: translateY(-60px) translateX(0) scale(0.5);
    }
  }

  /* Responsive Design */
  @media (max-width: $breakpoint-lg) {
    .feature-icon {
      display: none;
    }
    
    .particle {
      display: none;
    }
  }

  @media (max-width: $breakpoint-md) {
    h1 {
      font-size: 60px;
    }
    
    .touch-point {
      width: 30px;
      height: 30px;
    }
    
    .i-board {
      width: 500px;
    }
  }

  @media (max-width: $breakpoint-sm) {
    h1 {
      font-size: 48px;
      letter-spacing: -2px;
    }
    
    .touch-point {
      width: 24px;
      height: 24px;
    }
    
    .i-board {
      width: 400px;
    }
    
    .interactive-demo {
      margin: 20px auto;
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .i-board,
    .touch-point,
    .feature-icon,
    .particle {
      animation: none;
    }
    
    .i-board {
      animation: none;
    }
  }
</style>
