---
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/common/Button/Button.astro';

const title = '404 - Page Not Found | Big Shine Display';
const description = 'The page you are looking for does not exist or has been moved.';
---

<MainLayout title={title} description={description}>
  <div class="error-container container">
    <div class="error-content">
      <h1>404</h1>
      <h2>Page Not Found</h2>
      <p>The page you are looking for doesn't exist or has been moved.</p>
      <div class="error-actions">
        <Button variant="primary" href="/">Return to Home</Button>
        <Button variant="ghost" href="/contact.astro">Contact Support</Button>
      </div>
    </div>
  </div>
</MainLayout>

<style lang="scss">
  .error-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    padding: var(--spacing-xl) 0;
    text-align: center;
  }

  .error-content {
    max-width: 600px;
    padding: var(--spacing-lg);
    background-color: var(--color-surface);
    border-radius: 8px;
    box-shadow: var(--box-shadow-1);
  }

  h1 {
    font-size: 6rem;
    margin: 0;
    color: var(--color-accent-primary);
    line-height: 1;
  }

  h2 {
    font-size: var(--font-size-h2);
    margin-top: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
    color: var(--color-text-primary);
  }

  p {
    font-size: var(--font-size-body-large);
    margin-bottom: var(--spacing-lg);
    color: var(--color-text-secondary);
  }

  .error-actions {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 4rem;
    }
    
    .error-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
